<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroPrestador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/kontakta_logo"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/img_pick_btn2"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:text="Selecciona tu imagen"
                android:background="@drawable/orange_background"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textNombreServ"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Nombre del grupo o artista"
                android:inputType="textPersonName"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textIntegrantes"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginEnd="72dp"
                android:layout_marginRight="72dp"
                android:ems="10"
                android:hint="Integrantes"
                android:inputType="number"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textDescripcion"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:ems="10"
                android:hint="Descripcion"
                android:inputType="textEmailAddress"
                android:translationX="37dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Genero"
                android:translationX="37dp" />

            <Spinner
                android:id="@+id/textGenero"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:ems="10"
                android:entries="@array/generos"
                android:hint="Genero"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textYoutube"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Youtube"
                android:inputType="textPersonName"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textInstagram"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Instagram"
                android:inputType="textPersonName"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textFacebook"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Facebook"
                android:inputType="textPersonName"
                android:translationX="37dp" />

            <EditText
                android:id="@+id/textTwitter"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Twitter"
                android:inputType="textPersonName"
                android:translationX="37dp" />

            <Button
                android:id="@+id/buttonRegistroServ"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Registrarme"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="20dp"
                android:background="@drawable/orange_background"
                android:translationX="37dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>