        android:orientation="vertical"
        android:translationY="40dp">

        <TextView
            android:id="@+id/perfilTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/imgUper"
            android:layout_width="wrap_content"
            android:layout_height="128dp" />

        <TextView
            android:id="@+id/nombreUper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <TextView
            android:id="@+id/edadUper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad" />

        <TextView
            android:id="@+id/sexoUper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo" />

        <TextView
            android:id="@+id/ubiUper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n" />
        <TextView
            android:id="@+id/correoUper"
            android:layout_width="wrap_content"
